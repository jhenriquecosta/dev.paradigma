@inherits BaseWorkTextEdit
<Field ColumnSize="@Size">
    <SfTextBox OnChange="OnValueChanged"
               OnBlur="OnBlurFired"
               Locale="@Locale"
               ShowClearButton="@ShowClearButton"
               @ref="objEditText"
               Readonly="@(!AllowEdit)"
               CssClass="@CssClass"
               @bind-Value="@Value"
               Placeholder="@Caption"
               Multiline="@Multiline"
               FloatLabelType="@FloatLabel">
    </SfTextBox>
</Field>

