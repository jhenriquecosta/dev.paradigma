
@typeparam TValue
@inherits WorkBaseNumericEdit<TValue>

<SfNumericTextBox  Value="@Value"
                   @ref="objNumberEdit"
                   TValue="TValue"
                   Format="@Format"
                   Decimals="@Decimals"
